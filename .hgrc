[ui]
username = Drew Stephens <drew@dinomite.net>
editor = vim

[extensions]
color =
progress =
pager =
rebase =
hgext.rebase=
hgext.hgk=
hgext.graphlog=
hgext.extdiff=
hgext.hgshelve=
mq=
color=
purge=

[alias]
st = status
ci = commit
pull = pull --rebase
show = log --color=always -pr
slog = log --style ~/.hg_files/map-cmdline.slog --pager=yes
nlog = log --style ~/.hg_files/map-cmdline.nlog --pager=yes
l = log --style ~/.hg_files/map-cmdline.slog

[color]
status.modified = magenta bold
status.added = green bold
status.removed = red bold
status.deleted = cyan bold
status.unknown = bold
status.ignored = bold
