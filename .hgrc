[ui]
username = Drew Stephens <drew@dinomite.net>
editor = vim

[extensions]
color =
progress =
pager =
rebase =
hgext.rebase=
hgext.hgk=
hgext.graphlog=
hgext.extdiff=
hgext.hgshelve=
mq=
color=
purge=

[alias]
st = status
ci = commit
pull = pull --rebase
show = log --color=always -pr
l = log --style ~/.hg_files/map-cmdline.nlog
nlog = log --style ~/.hg_files/map-cmdline.nlog --pager=yes

[color]
status.added = green
status.modified = yellow
status.removed = red
status.deleted = cyan
status.unknown = cyan
