source $HOME/.screenrc

sessionname dbconns

screen -t 'dev1' geniusDB main
screen -t 'dev1gurl' geniusDB gurl
screen -t 'dev1mta' geniusDB mta
screen -t 'dev1sfdump' geniusDB sfDump

screen -t 'stg1' bash
screen -t 'stg1gurl' bash
screen -t 'stg1mta' bash
screen -t 'stg1sfdump' bash

screen -t 'stg2' bash
screen -t 'stg2gurl' bash
screen -t 'stg2mta' bash
screen -t 'stg2sfdump' bash

select 0

hardstatus on
hardstatus alwayslastline
hardstatus string "%{.bW}%-w%{.rW}%n %t%{-}%+w %=%{..G} %H %{..Y} %m/%d %C%a "

# Screensaver
#idle 500 eval "screen cmatrix 10" "idle 0"
